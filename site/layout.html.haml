!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "../../favicon.ico", :rel => "icon"}
    %title #{@page_title ? "#{@page_title} - " : nil} Haml User Tags
    %link{:href => "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "style.css", :rel => "stylesheet"}
    %style{ :type => "text/css" }= Pygments.css
  %body{@body_scrollspy ? { :data => { "spy" => "scroll", "target" => @body_scrollspy } } : {}}
    %header.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "."} Haml User Tags
        .collapse.navbar-collapse
          - define_tag :NavItem do |attributes, content|
            %li{ :class => File.basename(@_stasis.path, ".haml") == attributes["href"] ? "active" : nil }
              %a{ :href => attributes["href"] == "index.html" ? "." : attributes["href"] }= content
          %ul.nav.navbar-nav
            %NavItem{ :href => "index.html" } About
            %NavItem{ :href => "download.html" } Download
            %NavItem{ :href => "tutorial.html" } Tutorial
            %NavItem{ :href => "examples.html" } Examples
    %main.container
      = yield
    %footer
      .container
        %p
          Built by <a href="http://cgamesplay.com/">Ryan Patterson</a>.
          Currently at v#{HamlUserTags::LATEST_STABLE_VERSION}.
        %p
          %iframe{ :src => "http://ghbtns.com/github-btn.html?user=CGamesPlay&repo=haml_user_tags&type=watch&count=true", :allowtransparency => true, :frameborder => 0, :scrolling => 0, :width => 110, :height => 20 }
          %iframe{ :src => "http://ghbtns.com/github-btn.html?user=CGamesPlay&repo=haml_user_tags&type=fork&count=true", :allowtransparency => true, :frameborder => 0, :scrolling => 0, :width => 95, :height => 20 }
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    :javascript
      $('.popover-button').popover();
      // Disable demo links
      $('a[href="#"]').click(function(e) { e.preventDefault(); });
